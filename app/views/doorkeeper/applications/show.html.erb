<div class="span16">
  <header class="page-header">
    <h1>客户端: <%= @application.name %></h1>
  </header>
</div>

<div class="span10">
  <h4>Callback 路径:</h4>
  <p id="callback_url">
    <% @application.redirect_uri.split.each do |uri| %><code><%= uri %></code> <% end %>
  </p>

  <h4>Application Id:</h4>
  <p><code id="application_id"><%= @application.uid %></code></p>

  <h4>Secret:</h4>
  <p><code id="secret"><%= @application.secret %></code></p>

  <h4>链接到授权页面:</h4>
  <p><%= link_to '授权认证', oauth_authorization_path(:client_id => @application.uid, :redirect_uri => @application.redirect_uri, :response_type => 'code' ) %></p>
</div>

<div class="span6">
  <h3>操作</h3>
  <p><%= link_to '列出所有', oauth_applications_path %></p>
  <p><%= link_to '编辑', edit_oauth_application_path(@application) %></p>
  <p><%= render 'delete_form', application: @application %></p>
</div>
